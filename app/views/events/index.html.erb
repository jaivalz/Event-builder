<p id="notice"><%= notice %></p>
<div class="panel panel-default">

  <div class="panel-heading">Index</div>
  <table class="table class="table table-bordered"">
    <thead>
      <tr>
        <th> Title </th>
        <th> Start </th>
        <th> End </th>
        <th> Location </th>
        <th> Agenda </th>
        <th> Address </th>
        <th> Organizer</th>
        <th> Created at</th>
        <th> Updated at </th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <% @events.each do |event| %>
            <td><%= event.title %></td>
            <td><%= event.start_date.strftime("%v") %></td>
            <td><%= event.end_date.strftime("%v") %></td>
            <td><%= event.location %></td>
            <td><%= event.agenda %></td>
            <td><%= event.address %></td>
            <td><%= event.organizer_id %></td>
            <td><%= event.created_at.strftime("%v") %></td>
            <td><%= event.updated_at.strftime("%v") %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>


